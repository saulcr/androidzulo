<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="com.batch16.crs.calculadora.MainActivity">

    <TextView
        android:id="@+id/tv_cifra"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="18pt"
        android:textColor="#000000"
        android:gravity="right|center_vertical"/>
    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="18pt"
        android:textColor="#000000"
        android:gravity="right|center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#000">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_7"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="7" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="4" />
            <Button
                android:id="@+id/btn_1"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="1" />
            <Button
                android:id="@+id/btn_decimal"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="7mm"
                android:text="." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_8"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="8" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="5" />
            <Button
                android:id="@+id/btn_2"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="2" />
            <Button
                android:id="@+id/btn_0"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_9"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="9" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="6" />
            <Button
                android:id="@+id/btn_3"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="3" />
            <Button
                android:id="@+id/btn_igual"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#000000"
                android:textSize="5mm"
                android:text="=" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical"
            android:background="#696969">

            <Button
                android:id="@+id/btn_borrar"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#696969"
                android:textSize="3mm"
                android:text="DEL" />

            <Button
                android:id="@+id/btn_division"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#696969"
                android:textSize="3mm"
                android:text="/" />
            <Button
                android:id="@+id/btn_multipilcar"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#696969"
                android:textSize="3mm"
                android:text="X" />
            <Button
                android:id="@+id/btn_restar"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#696969"
                android:textSize="6mm"
                android:text="-" />
            <Button
                android:id="@+id/btn_sumar"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#696969"
                android:textSize="4mm"
                android:text="+" />


       </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="#00FF7F">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>



